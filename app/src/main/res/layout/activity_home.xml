<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"
        android:padding="16dp">

        <!-- Barre de navigation en haut -->
        <LinearLayout
            android:id="@+id/topNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="4"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/navAccueil"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/home"
                    android:contentDescription="Accueil" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accueil"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/profile"
                    android:contentDescription="Profil" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navStatistiques"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/show_chart"
                    android:contentDescription="Statistiques" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistiques"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iconLogout"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Logout"
                android:padding="4dp"
                android:src="@drawable/logout"
                app:tint="@color/dark_gray" />
        </LinearLayout>

        <!-- Message de bienvenue -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topNav"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Welcome, User!"
            android:textColor="@color/dark_gray"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Section Statistiques Rapides -->
        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvWelcome"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- Carte Streak -->
            <LinearLayout
                android:id="@+id/cardStreak"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconStreak"
                    android:layout_width="37dp"
                    android:layout_height="39dp"
                    android:src="@drawable/ic_streak"
                    android:contentDescription="@string/streak"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvStreakDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvStreakLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jours"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray" />
            </LinearLayout>

            <!-- Carte Temps Méditation -->
            <LinearLayout
                android:id="@+id/cardMeditationTime"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconMeditationTime"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:src="@drawable/ic_time"
                    android:contentDescription="Temps méditation"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvMeditationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45min"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvMeditationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cette semaine"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray" />
            </LinearLayout>

            <!-- Carte Humeur Moyenne -->
            <LinearLayout
                android:id="@+id/cardMoodAverage"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iconMoodAverage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_mood"
                    android:contentDescription="Humeur moyenne"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tvMoodAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.2"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvMoodLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/5"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray" />
            </LinearLayout>
        </LinearLayout>

        <!-- Titre Fonctionnalités -->
        <TextView
            android:id="@+id/tvFeaturesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/statsContainer"
            android:text="Fonctionnalités"
            android:textSize="20sp"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Grid des fonctionnalités -->
        <GridLayout
            android:id="@+id/gridFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFeaturesTitle"
            android:layout_marginTop="24dp"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Carte Méditation -->
            <FrameLayout
                android:id="@+id/cardMeditation"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_meditation"
                        android:contentDescription="Meditation"
                        app:tint="@color/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Méditation"
                        android:textColor="@color/colorSecondary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Carte Respiration -->
            <FrameLayout
                android:id="@+id/cardBreathing"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_breathing"
                        android:contentDescription="Breathing"
                        app:tint="@color/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exercices de respiration"
                        android:textColor="@color/colorSecondary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Carte Suivi humeur -->
            <FrameLayout
                android:id="@+id/cardMood"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_mood"
                        android:contentDescription="Mood Tracking"
                        app:tint="@color/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suivi de stress / humeur"
                        android:textColor="@color/colorSecondary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </FrameLayout>

            <!-- Carte Articles -->
            <FrameLayout
                android:id="@+id/cardArticles"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_articles"
                        android:contentDescription="@string/articles"
                        app:tint="@color/colorSecondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Articles / Conseils"
                        android:textColor="@color/colorSecondary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </FrameLayout>
        </GridLayout>

        <!-- Section Articles Récents -->
        <TextView
            android:id="@+id/tvRecentArticles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridFeatures"
            android:text="Articles Récents"
            android:textSize="20sp"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Container des articles -->
        <LinearLayout
            android:id="@+id/articlesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRecentArticles"
            android:orientation="vertical">

            <!-- Article 1 -->
            <LinearLayout
                android:id="@+id/article1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/articleImage1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_articles"
                    android:contentDescription="Article"
                    android:scaleType="centerCrop"
                    app:tint="@color/colorSecondary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/articleTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 techniques de respiration pour réduire le stress"
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/articleDate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Il y a 2 jours"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Article 2 -->
            <LinearLayout
                android:id="@+id/article2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/articleImage2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_articles"
                    android:contentDescription="Article"
                    android:scaleType="centerCrop"
                    app:tint="@color/colorSecondary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/articleTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comment intégrer la méditation dans votre routine quotidienne"
                        android:textSize="16sp"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:maxLines="2" />

                    <TextView
                        android:id="@+id/articleDate2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Il y a 5 jours"
                        android:textSize="12sp"
                        android:textColor="@color/gray"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
